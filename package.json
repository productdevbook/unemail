{
  "name": "unemail",
  "type": "module",
  "version": "0.0.1",
  "private": false,
  "packageManager": "pnpm@10.7.1",
  "description": "A modern TypeScript email library with zero dependencies, supporting multiple providers including AWS SES, Resend, MailCrab, and HTTP APIs",
  "author": "productdevbook <hi@productdevbook.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/productdevbook",
  "homepage": "https://github.com/productdevbook/unemail#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/productdevbook/unemail.git"
  },
  "bugs": "https://github.com/productdevbook/unemail/issues",
  "keywords": [
    "email",
    "email-service",
    "typescript",
    "esm",
    "zero-dependencies",
    "aws-ses",
    "resend",
    "mailcrab",
    "smtp",
    "http-provider",
    "email-attachments",
    "html-emails",
    "email-templates",
    "unified-api",
    "provider-pattern",
    "development-tools"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./providers/*": {
      "types": "./dist/providers/*.d.mts",
      "import": "./dist/providers/*.mjs"
    },
    "./types": {
      "types": "./dist/types/index.d.mts",
      "import": "./dist/types/index.mjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.mts",
      "import": "./dist/utils/index.mjs"
    }
  },
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "bin": {
    "unemail-mailcrab": "./scripts/setup-mailcrab.mjs"
  },
  "files": [
    "dist",
    "scripts"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage.enabled true",
    "mailcrab": "node ./scripts/setup-mailcrab.mjs",
    "example": "node ./playground/mailcrab-example.ts",
    "example:aws-ses": "node ./playground/aws-ses-example.ts",
    "example:resend": "node ./playground/resend-example.ts",
    "prepare:mailcrab": "chmod +x ./scripts/setup-mailcrab.mjs && npm run build",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "bumpp": "bumpp package.json",
    "release": "pnpm build && pnpm bumpp && pnpm publish --no-git-checks --access public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "^3.1.1",
    "bumpp": "^10.1.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.24.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "resolutions": {
    "unemail": "link:."
  }
}
